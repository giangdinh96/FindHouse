<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.giangdinh.returnnotfound.findhouse.UI.MapDetailActivity.MapDetailActivity">

    <LinearLayout
        android:id="@+id/llActionContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/ivCurrentHouseLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_action_menu"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/ic_action_house_location_normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSearchAddress"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_input2"
                android:clickable="true"
                android:gravity="center_vertical"
                android:hint="Tìm kiếm"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ivCurrentHouseLocation"
                app:layout_constraintRight_toLeftOf="@id/ivCurrentUserLocation"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/ivCurrentUserLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_action_menu"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/ic_action_user_location_normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/llActionContainer">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/ctActionContainer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivChangeType"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_action_map_type_normal"
            app:layout_constraintRight_toRightOf="@id/map"
            app:layout_constraintTop_toTopOf="@id/map" />

        <ImageView
            android:id="@+id/ivDirection"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_action_direction_selector"
            app:layout_constraintBottom_toBottomOf="@id/map"
            app:layout_constraintRight_toRightOf="@id/map" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/ctActionContainer"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@color/colorBackgroundMain"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/tvDurationAndDistance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>
